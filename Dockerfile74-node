FROM wbgrs/php:7.4

# specify the exact node version (e.g. '12.20.2', '12' won't work)
ENV NODE_VERSION 12.20.2
# after installation use nvm with `/usr/local/nvm/nvm.sh`
ENV NVM_DIR /usr/local/nvm

RUN /scripts/node_install.sh

ENV NODE_PATH $NVM_DIR/v$NODE_VERSION/lib/node_modules
ENV PATH      $NVM_DIR/versions/node/v$NODE_VERSION/bin:$PATH

# Install autoreconf to fix gulp-imagin issue
RUN apt install dh-autoreconf -yqq
